  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/ping",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "ping"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"secret\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "login"
          ]
        },
        "description": "Login with username+password or email+password."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  var json = pm.response.json();",
              "  if (json && json.data && json.data.token) {",
              "    pm.collectionVariables.set('token', json.data.token);",
              "  }",
              "} catch (e) { }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Albums - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/albums?per_page=12",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "albums"
          ],
          "query": [
            {
              "key": "per_page",
              "value": "12"
            }
          ]
        },
        "description": "List paginated albums. per_page (1..50). Uses Authorization: Bearer {{token}} from login."
      }
    },
    {
      "name": "Albums - Create",
      "request": {
        "method": "POST",
