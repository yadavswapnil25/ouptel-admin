{
  "info": {
    "name": "Ouptel Admin API v1",
    "_postman_id": "c2a9ec9d-6d8b-4b1e-9d2e-ouptel-admin-v1",
    "description": "API collection for login, ping, albums (list, create).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/v1/ping",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "ping"
          ]
        }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"john\",\n  \"password\": \"secret\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/login",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "login"
          ]
        },
        "description": "Login with username+password or email+password."
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "try {",
              "  var json = pm.response.json();",
              "  if (json && json.data && json.data.token) {",
              "    pm.collectionVariables.set('token', json.data.token);",
              "  }",
              "} catch (e) { }"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Albums - List",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/albums?per_page=12",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "albums"
          ],
          "query": [
            {
              "key": "per_page",
              "value": "12"
            }
          ]
        },
        "description": "List paginated albums. per_page (1..50). Uses Authorization: Bearer {{token}} from login."
      }
    },
    {
      "name": "Albums - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"album_name\": \"My Holiday\",\n  \"images\": [\n    \"uploads/1.jpg\",\n    \"uploads/2.jpg\"\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/create-album",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "create-album"
          ]
        },
        "description": "Creates a new album post for the logged-in user (from token). Images are stored in Wo_Albums_Media."
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000"
    },
    {
      "key": "token",
      "value": ""
    }
  ]
}


