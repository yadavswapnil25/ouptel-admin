        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"album_name\": \"My Holiday\",\n  \"images\": [\n    \"uploads/1.jpg\",\n    \"uploads/2.jpg\"\n  ]\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/v1/create-album",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "create-album"
          ]
        },
        "description": "Creates a new album post for the logged-in user (from token). Images are stored in Wo_Albums_Media."
      }
    },
